{
  "name": "file-manager",
  "version": "1.0.0",
  "description": "File manager microservice",
  "author": "eduardogomesf",
  "license": "MIT",
  "keywords": [
    "node",
    "typescript",
    "microservice"
  ],
  "scripts": {
    "test": "jest",
    "build": "rm -rf dist && npx tsc --project tsconfig-build.json && npx tsc-alias -p tsconfig-build.json",
    "lint": "npx eslint . --ext .ts",
    "dev": "ts-node-dev -r tsconfig-paths/register ./src/main/server.ts --respawn --transpile-only --ignore-watch node_modules",
    "start": "npm run build && node -r tsconfig-paths/register dist/main/server.js",
    "up": "docker compose up -d",
    "down": "docker compose down"
  },
  "devDependencies": {
    "@types/amqplib": "0.10.4",
    "@types/cors": "2.8.17",
    "@types/express": "4.17.21",
    "@types/jest": "29.5.8",
    "@types/luxon": "3.3.7",
    "@types/multer": "^1.4.11",
    "@types/node": "20.9.0",
    "@types/uuid": "9.0.7",
    "@typescript-eslint/eslint-plugin": "6.10.0",
    "eslint": "8.53.0",
    "eslint-config-standard-with-typescript": "39.1.1",
    "eslint-plugin-import": "2.29.0",
    "eslint-plugin-n": "16.3.1",
    "eslint-plugin-promise": "6.1.1",
    "jest": "29.7.0",
    "prisma": "5.7.1",
    "ts-jest": "29.1.1",
    "ts-node-dev": "2.0.0",
    "tsc-alias": "1.8.8",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.2.2"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "3.490.0",
    "@prisma/client": "5.7.1",
    "cors": "2.8.5",
    "dotenv": "16.3.1",
    "express": "4.18.2",
    "kafkajs": "2.2.4",
    "luxon": "3.4.4",
    "multer": "^1.4.5-lts.1",
    "uuid": "9.0.1"
  }
}
